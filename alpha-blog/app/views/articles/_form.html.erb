<%= render 'shared/errors', obj: @article %>


<%= form_with model: @article, role: "form", local: true do |f| %>
	<div class="form-group">
		<div class="control-label offset-sm-1">
			<%= f.label :title %>
		</div>
		<div class="col-sm-6 offset-sm-1">
			<%= f.text_field :title, class: "form-control", placeholder: "Title of article", autofocus: true %>
		</div>	
    </div>
    
    <div class="form-group">
		<div class="control-label offset-sm-1">
			<%= f.label :description %>
		</div>
	
		<div class="col-md-10 offset-sm-1">
			<%= f.text_area :description, rows: 5, class: "form-control", placeholder:"Body of article", autofocus: true %>
		</div>
	</div>

	  <div class="form-group">
	  	<div class="row">
			<div class="col-md-11 offset-sm-1">
			<%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
				<%= cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "checkbox") + " " + cb.text}%>
				<% end %>
		</div>
	</div>

    <div class="form-group">
  		<div class="offset-sm-1">
  			<%= f.submit class: "btn btn-primary btn-lg" %>
  		</div>
	</div>
<% end %>

<div class="col-xs-6 offset-sm-1">
		<%= link_to "Cancel request and return to articles page", articles_path %>
</div>
