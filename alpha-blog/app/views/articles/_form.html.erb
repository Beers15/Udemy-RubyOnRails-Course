<% if @article.errors.any? %>

<h2>Your article submission had the following errors: </h2>  
<ul> 
	<% @article.errors.full_messages.each do |msg| %>
	  <li><%= msg %></li>  
    <% end %>
</ul>
<% end %>

<div class='row'>
	<div class='col-lg-12'>
		<%= form_with model: @article, class: "form-horizontal", role: "form", local: true do |f| %>
			<div class="form-group">
				<div class="control-label col-sm-2">
					<%= f.label :title %>
				</div>
				<div class="col-sm-10">
					<%= f.text_field :title, class: "form-control", placeholder: "Title of article", autofocus: true %>
				</div>	
		    </div>
		    
		    <div class="form-group">
				<div class="control-label col-sm-2">
					<%= f.label :description %>
				</div>
			
				<div class="col-sm-10">
					<%= f.text_area :description, rows: 5,class: "form-control", placeholder:"Body of article", autofocus: true %>
				</div>
			</div>

		    <div class="form-group">
		  		<div class="col-sm-4">
		  			<%= f.submit class: "btn btn-primary btn-lg" %>
		  		</div>
			</div>
		<% end %>

		<div class="col-sm-4 cols-xs-offset-4">
				<%= link_to "Cancel request and return to articles page", articles_path %>
		</div>
	</div>
</div>