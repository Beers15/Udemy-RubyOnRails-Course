<% if obj.errors.any? %>
<div class="row">
	<div class="col-xs-8 col-lg-offset-4">
		<div class="card text-white bg-danger mb-3">
			<div class="card-header">
				<%= pluralize(obj.errors.count, "error") %>
				prevented this article from being saved:
			</div>
			<div class="card-text">
				<ul>
					<% obj.errors.full_messages.each do |msg| %>
  						<li><%= msg %></li>  
					<% end %>
				</ul>
			</div>
		</div>
	</div>
</div>
<% end %>