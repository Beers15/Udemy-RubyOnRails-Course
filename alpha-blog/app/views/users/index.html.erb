<br><h1 align="center">Alpha blog users</h1><hr>
<div align="center">
	<%= will_paginate renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
	<% @users.reverse.each do |user| %>
		<ul class="listing">
			<div class="row">
				<div class="well col-md-12">
					<li><%= link_to gravatar_for(user), user_path(user) %></li>
					<li class="article-title"><%= link_to user.username, user_path(user) %></li>
					<li><small><%= pluralize(user.articles.count, "article") if user.articles %></small></li>
				<% if logged_in? and current_user.admin? %>
					<li>
						<%= link_to "DELETE USER", user_path(user), method: :delete, data: {confirm: "Are you sure you want to delete this user?"} %>
					</li>
				<% end %>
				</div>
			</div>
		</ul>
	<% end %>
	<%= will_paginate renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
</div>